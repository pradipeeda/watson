def main(args):
    # args contains input payload (JSON)
    # You can access headers via args.get("__ow_headers") if HTTP trigger

    event_type = args.get("__ow_headers", {}).get("X-GitHub-Event", "unknown")
    repo_name = args.get("repository", {}).get("full_name", "unknown")

    print(f"Received event '{event_type}' for repo '{repo_name}'")

    return {
        "statusCode": 200,
        "body": {"message": "Webhook received successfully"}
    }
